<!-- Tanks-->
<div class="">
  <% Tank.all.each do |tank| %>
    <div class="tank-card">
      <%= tank.name  %>
      <%= tank.description  %>
      <br>
      <%= tank.price_per_day %> | <%= tank.capacity %>
    </div>
  <% end %>
</div>


