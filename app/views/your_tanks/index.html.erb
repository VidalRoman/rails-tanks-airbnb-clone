<% @tanks.each do |tank| %>
  <div class="tank-card">
    <%= tank.name  %>
    <br>
    <%= tank.price_per_day %> | <%= tank.capacity %>
    <%= link_to 'Edit', edit_tank_path(tank), class: "btn btn-outline-warning" %>
    <%= link_to 'Delete', your_tank_path(tank), class: "btn btn-outline-danger",
      method: :delete,
      data: { confirm: "Are you sure"} %> 
  </div>
  <br>
<% end %>

